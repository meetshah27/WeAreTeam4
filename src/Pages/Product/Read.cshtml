@page "{id}"

@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Components

@inject JsonFileProductService ProductService

@model ReadModel

@{

    ViewData["Title"] = "Read page";

}

<h1>Read</h1>

<div class="container">
   <h5 class="title" id="productTitle">
        @Model.Product.Title
        @if (!string.IsNullOrEmpty(Model.Product.GitHub))
        {
            <a href="@Model.Product.GitHub" target="_blank" rel="noopener noreferrer" title="GitHub Repository" style="margin-left: 10px;">
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
                 alt="GitHub" style="width:30px; height:30px;">
            </a>
        }
    </h5>

    <img class="card-img" src="@Model.Product.Image" alt='Image for @Model.Product.Title'>
    <p class="card-text">@Model.Product.Description</p>
</div>

<br />

<div class="row">
    <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-info" onclick="window.location.href='@Url.Page("Update", new { id = @Model.Product.Id})'">Update</a> &nbsp; &nbsp;
    @(await Html.RenderComponentAsync<ModalDelete>(RenderMode.ServerPrerendered, new { productId = Model.Product.Id }))
</div>

<script src="_framework/blazor.server.js"></script>

