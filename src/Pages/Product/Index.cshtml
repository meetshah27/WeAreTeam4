@page
@model ContosoCrafts.WebSite.Pages.Product.IndexModel
@{
    ViewData["Title"] = "Index page";
}

<div class="container">
    <button type="button" class="btn-read">Host Website!</button>
    <br><br>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Title</td>
                    @*<td><a asp-page="Read" asp-route-id="@product.Id">Read</a></td>*@
                    <td>
                        <button class="btn-read" onclick="window.location.href='@Url.Page("Read", new { id = product.Id })'">Read</button>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>