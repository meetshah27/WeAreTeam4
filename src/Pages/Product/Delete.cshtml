@page "{id}"

@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Components

@inject JsonFileProductService ProductService
@model DeleteModel

@{
    ViewData["Title"] = "Delete Page";
}

<!-- Page container with centered content -->
<div class="container" style="height: 100%; display: flex; align-items: center; justify-content: center;">
    <!-- Confirmation message asking the user for deletion confirmation -->
    <div>
        <h5>Are you SURE you want to delete this product?</h5>
    </div>

    <div>
        <!-- Button to cancel and go back to the previous page -->
        <button class="btn btn-info" onclick="history.back()">No, I made a mistake. Take me back.</button>&nbsp; &nbsp;

    </div>

    <!-- Form to confirm product deletion -->
    <form method="post">
        <div>
            <!-- Button to submit and confirm the deletion of the product -->
            <input type="submit" value="Yes! Delete the product!" class="btn btn-danger" />&nbsp; &nbsp;
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        // Include validation scripts for client-side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

